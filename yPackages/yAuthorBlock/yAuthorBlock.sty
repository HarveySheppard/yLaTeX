\newcommand{\yauthorblockemaillink}[1]{%
	{\hypersetup{urlcolor=black}\href{mailto:#1}{#1}}%
}



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
